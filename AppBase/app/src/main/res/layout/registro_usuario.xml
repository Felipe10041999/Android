<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Usuarios.UsuarioActivity">

    <TextView
            android:text="Registrar Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.022"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>

    <EditText
            android:hint="Tipo de documento"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:id="@+id/tipodoc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintBottom_toTopOf="@+id/numdoc"
            app:layout_constraintVertical_bias="0.434"/>
    <EditText
            android:hint="Numero documento"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:id="@+id/numdoc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginBottom="524dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintVertical_bias="0.612"/>
    <EditText
            android:hint="Nombres"
            android:layout_width="312dp"
            android:ems="10"
            android:layout_height="48dp" android:id="@+id/nombres"
            app:layout_constraintTop_toBottomOf="@+id/apellidos"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.03"/>

    <EditText
            android:hint="Apellidos"
            android:layout_width="312dp"
            android:ems="10"
            android:layout_height="48dp" android:id="@+id/apellidos"
            app:layout_constraintTop_toBottomOf="@+id/numdoc"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.025"/>
    <EditText
            android:hint="Direccion"
            android:layout_width="312dp"
            android:ems="10"
            android:layout_height="48dp" android:id="@+id/direccion"
            app:layout_constraintTop_toBottomOf="@+id/nombres"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.017"/>
    <EditText
            android:hint="Correo"
            android:layout_width="312dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_height="48dp" android:id="@+id/correo"
            app:layout_constraintTop_toBottomOf="@+id/direccion"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.028"/>

    <EditText
            android:hint="Numero de telefono"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/numTel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.032"
            app:layout_constraintTop_toBottomOf="@+id/correo"/>
    <EditText
            android:hint="Fecha de nacimiento"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fecNac"
            app:layout_constraintTop_toBottomOf="@+id/numTel" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.044"/>
    <EditText
            android:hint="ContraseÃ±a"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/fecNac"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.054"/>
    <EditText
            android:hint="Rol"
            android:layout_width="312dp"
            android:layout_height="48dp" android:id="@+id/rolId"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.096"/>
    <Button
            android:text="Registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegistrar"
            android:layout_marginTop="52dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.236" app:layout_constraintVertical_bias="0.944"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@android:color/holo_green_dark"
    />
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            android:layout_marginTop="52dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.697" app:layout_constraintVertical_bias="0.944"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@android:color/holo_red_dark"/>


</androidx.constraintlayout.widget.ConstraintLayout>
