<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
            android:id="@+id/tvEmail"
            android:layout_width="227dp"
            android:layout_height="25dp"
            android:text="correo@ejemplo.com"
            app:layout_constraintTop_toBottomOf="@id/tvNombre"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/tvNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3211234567"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"/>
    <ImageView
            android:layout_width="154dp"
            android:layout_height="95dp"
            app:srcCompat="@drawable/descarga"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Editar"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:textSize="12sp"
            android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/tvTelefono"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"/>
    <Button
            android:text="eliminar"
            android:layout_width="89dp"
            android:layout_height="38dp"
            android:textSize="11sp"
            android:id="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/tvTelefono"
            app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
